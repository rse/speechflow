{
    "compilerOptions": {
		"outDir":                  "../dst",
        "target":                  "es2024",
        "module":                  "nodenext",
        "moduleResolution":        "nodenext",
        "useDefineForClassFields": true,
        "composite":               false,
        "strict":                  true,
        "jsx":                     "preserve",
        "resolveJsonModule":       true,
        "isolatedModules":         true,
        "esModuleInterop":         true,
        "lib":                     [ "es2022" ],
        "skipLibCheck":            true,
        "noEmit":                  false,
        "types":                   [ "node" ],
        "rootDir":                 "../src"
    },
    "include": [
        "../src/**/*.ts"
    ]
}
